    </servlet>
    <servlet>
        <servlet-name>ServletAdminUpdateBook</servlet-name>
        <servlet-class>haanh.servlet.ServletAdminUpdateBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAdminUpdateBookImage</servlet-name>
        <servlet-class>haanh.servlet.ServletAdminUpdateBookImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletGetBooks</servlet-name>
        <servlet-class>haanh.servlet.ServletGetBooks</servlet-class>
